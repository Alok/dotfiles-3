! .xpilotrc
! For Qwerty keyboards
! Ankur Dave
! http://ankurdave.com

xpilot.name: Ankur Dave
xpilot.user: ankurdave
xpilot.host: ankurdave.com
!xpilot.sound: no

! Powerful multiple cluster mine
xpilot.modifierBank1:   CB1Z3V3X4
! Powerful nuke
xpilot.modifierBank2:   NCB1Z3V3
! Nuclear missiles
xpilot.modifierBank3:   NCB3Z3V1X4
! Powerful full nuclear cluster mine
xpilot.modifierBank4:   FNCB1Z3V3

xpilot.turnSpeed:       8

xpilot.keyTurnLeft: Left
xpilot.keyTurnRight: Right
xpilot.keyThrust: Up
xpilot.keyEmergencyShield: Down

xpilot.keyFireShot: space
xpilot.keyFireLaser: space

! LEFT INDEX: MINES
xpilot.keyDropMine: f
xpilot.keyDetachMine: r
xpilot.keyDetonateMines: v

! LEFT MIDDLE: MISSILES
xpilot.keyFireHeat: e
xpilot.keyFireMissile: d
xpilot.keyFireTorpedo: c

! LEFT RING: MISC
xpilot.keyRefuel: w
xpilot.keyCloak: s
xpilot.keyTransporter: x

! LEFT PINKY: MISC
xpilot.keyEcm: q
xpilot.keyPhasing: a
xpilot.keyDeflector: z

xpilot.keyTalk: Return

xpilot.keyShield: Shift_R
xpilot.keyEmergencyThrust: BackSpace
xpilot.keySelfDestruct: End
xpilot.keyLockClose: Delete
xpilot.keyLockNext: Next
xpilot.keyLockPrev: Prior

! MOUSE
xpilot.pointerButton1:  keyFireShot
xpilot.pointerButton2:  keyLockClose
xpilot.pointerButton3:  keyThrust
xpilot.pointerButton4:  keyLockPrev
xpilot.pointerButton5:  keyLockNext

