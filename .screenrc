# Longer scroll history
defscrollback 32768

# No annoying window flashes
vbell off
bell_msg ""

# Stop Ctrl-S from causing problems
defflow off

# Use C-b for escape key
escape ^bb

# Don't show "New screen..."
startup_message off

#caption always '%-w%{+b}%n %t%{-b}%+w'
caption splitonly

deflog off
logfile $HOME/history/screen/screenlog-%Y%m%d-%n-%H

ignorecase on

termcapinfo xterm* ti@:te@
