# Longer scroll history
defscrollback 32768

# No annoying window flashes
vbell off

# Stop Ctrl-S from causing problems
defflow off

# Use Ctrl-B instead of Ctrl-A for escape key
escape ^Bb

# Use space for windowlist as well as "
bind ' ' windowlist -b

# Don't show "New screen..."
startup_message off

deflog on
logfile $HOME/history/screenlog-%Y%m%d-%n-%H

ignorecase on

shelltitle '$ |bash:'

# Allow scrolling in xterm
termcapinfo xterm ti@:te@